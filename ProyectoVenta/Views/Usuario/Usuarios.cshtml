    ===============================================================-->
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js"></script>

   


    <script>
        var operacion = "";
        var tabla;

        $(document).ready(function(){

            $('#tbdata thead tr').clone(true).addClass('filters').appendTo('#tbdata thead')

            tabla = $("#tbdata").DataTable({
                orderCellsTop: true,
                fixedHeader: true,
                dom:"Bfrtip",
                buttons:[
                    {
                        text:"Crear Nuevo",
                        className:"btn-nuevo",
                        action:function(e,dt,node,config){

                            operacion = "crear";
                            limpiarControles();
                            $(".needs-validation").removeClass("was-validated")
                            $("#txtidusuario").val("0");
                            $("#modalUsuario").modal("show");

                        }
                    },
                    {
                        text: 'Exportar Excel',
                        extend: 'excelHtml5',
                        title: '',
                        filename: 'Reporte Usuarios',
                        exportOptions: {
                            columns: [ 1,2 ]
                        }
                    },'pageLength'
                ],
                pageLength: 10,
                responsive: true,
                "ajax": {
                    "url": '@Url.Action("ListaUsuario", "Usuario")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idUsuario" },
                    { "data": "nombreCompleto" },
                    { "data": "correo" },
                    { "data": "clave" },
                    {
                        "defaultContent": '<button class="btn btn-primary btn-editar btn-sm me-2"><i class="bi bi-pencil-fill"></i></button>' +
                            '<button class="btn btn-danger btn-eliminar btn-sm"><i class="bi bi-trash-fill"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "80px"
                    }
                ],
                initComplete: function () {
                        var api = this.api();
 
                        // For each column
                        api.columns().eq(0).each(function (colIdx) {
                                // Set the header cell to contain the input element
                                var cell = $('.filters th').eq(
                                    $(api.column(colIdx).header()).index()
                                );
                                var title = $(cell).text();

                                //especificar que columna debe mostrar la caja de filtro
                                if ($(api.column(colIdx).header()).index() >= 0 &&  $(api.column(colIdx).header()).index() != 2) {
                                     $(cell).html('<input type="text" placeholder="buscar..."/>');
                                }
 
                                // On every keypress in this input
                                $('input', $('.filters th').eq($(api.column(colIdx).header()).index())).off('keyup change').on('keyup change', function (e) {

                                        e.stopPropagation();
 
                                        // Get the search value
                                        $(this).attr('title', $(this).val());
                                        var regexr = '({search})'; //$(this).parents('th').find('select').val();
 
                                        var cursorPosition = this.selectionStart;
                                        // Search the column for that value
                                        api.column(colIdx).search(
                                                this.value != '' ? regexr.replace('{search}', '(((' + this.value + ')))') : '',
                                                this.value != '',
                                                this.value == ''
                                            ).draw();
 
                                        $(this).focus()[0].setSelectionRange(cursorPosition, cursorPosition);
                                    });
                            });
                },
                columnDefs:[
                    {
                        targets: 0,
                        visible:false
                    },
                    {
                        targets: 3,
                        visible:false
                    }
                ],
                language:{
                    url:"//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
            })
        
        })


        
        $("#btnguardarusuario").on("click",function(){

            //BUSCAR EN GOOGLE 2Validation · Bootstrap v5.0""

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')
            
            // Loop over them and prevent submission
            Array.prototype.slice.call(forms).forEach(function (form) {
            
                  if (form.checkValidity()) {

                      if($("#txtclave").val() != $("#txtclaveconfirmar").val()){
                            Swal.fire({
                              icon: 'error',
                              title: 'La contraseñas no coinciden',
                            })
                            //$("#txtclaveconfirmar").removeClass('is-valid')
                            //$("#txtclaveconfirmar").addClass("is-invalid")
                            //$('#cPwdInvalid').html('La contraseñas no coinciden')
                            //$('#cPwdInvalid').show();
                            return;
                      }


                      console.log("Listo para registrar");
                      var request_body = {
                          IdUsuario : $("#txtidusuario").val(),
                          NombreCompleto : $("#txtnombrecompleto").val(),
                          Correo : $("#txtcorreo").val(),
                          Clave : $("#txtclave").val()
                      };
                      
                      
                      jQuery.ajax({
                          url: '@Url.Action("GuardarUsuario", "Usuario")',
                          type: "POST",
                          headers: {
                              operacion: operacion
                          },
                          data: JSON.stringify(request_body),
                          dataType: "json",
                          contentType: "application/json; charset=utf-8",
                          success: function (data) {
                              console.log(data)
                      
                              if(data.respuesta){
                                  tabla.ajax.reload();
                                  $("#modalUsuario").modal("hide");
                              }
                          },
                          error: function (error) {
                          },
                          beforeSend: function () {
                          }
                      });

                  }else{
                      console.log("no paso validacion")
                  }
            
                  form.classList.add('was-validated')
            })

        })


        $("#tbdata tbody").on("click",".btn-editar",function(){
            operacion = "editar";
            $(".needs-validation").removeClass("was-validated")
            $("#modalUsuario").modal("show");

            var filaSeleccionada = $(this).closest('tr');
            var data = tabla.row(filaSeleccionada).data();

            $("#txtidusuario").val(data.idUsuario)
            $("#txtnombrecompleto").val(data.nombreCompleto)
            $("#txtcorreo").val(data.correo)
            $("#txtclave").val(data.clave)
            $("#txtclaveconfirmar").val(data.clave)

            console.log(data);
        })

        $("#tbdata tbody").on("click",".btn-eliminar",function(){

            var filaSeleccionada = $(this).closest('tr');
            var data = tabla.row(filaSeleccionada).data();


            Swal.fire({
              title: '¿Esta seguro de eliminar?',
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Si, eliminarlo',
              cancelButtonText: 'Cancelar'
            }).then((result) => {

                if (result.isConfirmed) {
                      jQuery.ajax({
                          url: '@Url.Action("EliminarUsuario", "Usuario")?idUsuario='+data.idUsuario,
                          type: "DELETE",
                          dataType: "json",
                          contentType: "application/json; charset=utf-8",
                          success: function (data) {
                              console.log(data)
                              if(data.respuesta){
                                  tabla.ajax.reload();
                              }
                          },
                          error: function (error) {
                          },
                          beforeSend: function () {
                          }
                      });
                }

            })


            console.log(data);
        })


