
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <section class="vh-100">
      <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
          <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="~/imagenes/pexels-karolina.jpg" class="img-fluid" alt="Phone image">
          </div>
          <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form asp-controller="Acceso" asp-action="Index" method="post">
              <h1>Iniciar Sesión</h1>
              <!-- Email input -->
              <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example13">Correo</label>
                  <input type="email" name="correo" class="form-control form-control-lg" autocomplete="off" />
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                    <label class="form-label" for="form1Example23">Contraseña</label>
                    <input type="password" name="clave" class="form-control form-control-lg" autocomplete="off" />
              </div>

              
                        @if (ViewData["mensaje"] != null)
                        {
                            <div class="form-outline mb-4">
                                <div class="alert alert-danger" role="alert"> @ViewData["mensaje"]</div>
                            </div>

                        }

              <div class="d-grid">
                  <button type="submit" class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </section>  
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>
